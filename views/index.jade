extends layout

block content
  article#article!= html
  #edit(style='display: none')
    form
      textarea(id="content", style="width: 90%; height: 400px; margin: auto")!= content
      br
      button(id="save") save
      label
        - if (published)
          input(type="checkbox", id="published", checked)
        - else
          input(type="checkbox", id="published")
        span published
